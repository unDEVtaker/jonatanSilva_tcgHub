<!DOCTYPE html>
<html>
  <%- include('partials/head', {title: 'TCG.HUB - Home'}) %>
  <body>
    <%- include('./partials/header') %>
    <%- include('./partials/hero') %>
    <%- include('./partials/brands') %>
    <%- include('./partials/newArrivals') %>
    <%- include('./partials/topCard') %>
    <%- include('./partials/banners') %>
    <%- include('./partials/newsLetter') %>
    <%- include('./partials/footer') %>
  </body>

  <script src="/javascripts/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    if (window.location.search.includes('userDeleted=1')) {
      Swal.fire({
        icon: 'success',
        title: '¡Cuenta eliminada!',
        text: 'Tu cuenta ha sido eliminada con éxito.',
        confirmButtonColor: '#e74c3c',
        timer: 2200,
        timerProgressBar: true,
        showConfirmButton: false
      });
      if (window.history.replaceState) {
        const url = new URL(window.location);
        url.searchParams.delete('userDeleted');
        window.history.replaceState({}, document.title, url.pathname + url.search);
      }
    }
  </script>
</html>