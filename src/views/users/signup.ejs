<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/header.css' />
  <link rel='stylesheet' href='/stylesheets/login.css' />
</head>

<body>
  <%- include('../partials/header') %>

    <div class="container-login">
      <div class="login-box">
        <div class="login-header">
          <header>Create new account</header>
        </div>

        <form action="/users/signup" method="POST">
          <div class="input-box">
            <input type="text" class="input-field" placeholder="Name" name="nombre" autocomplete="off" required>
          </div>
          <div class="input-box">
            <input type="text" class="input-field" placeholder="Email" name="correo" autocomplete="off" required>
          </div>
          <div class="input-box">
            <input type="password" class="input-field" placeholder="Password" name="contrasena" autocomplete="off"
              required>
          </div>
          <div class="input-submit">
            <button type="submit" class="submit-btn" id="submit">Create Account</button>
          </div>
          <div class="sign-up-link">
            <p>Already have an account?<a href="/users/login">Log In</a></p>
          </div>
        </form>
      </div>
    </div>

    <script src="/javascripts/script.js"></script>
</body>

</html>