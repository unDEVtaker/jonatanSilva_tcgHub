<%- include('../partials/head') %>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/header.css' />
    <link rel='stylesheet' href='/stylesheets/login.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


<body>
    <%- include('../partials/header') %>
    <div class="container-login">
        <div class="login-box">
            <div class="login-header">
                <header>Login</header>
            </div>


            <% if (typeof loginError !== 'undefined' && loginError) { %>
                <div class="alert alert-danger" role="alert" style="margin-bottom: 15px;">
                    <%= loginError %>
                </div>
            <% } %>


            <form action="/users/login" method="POST">

                <div class="input-box">
                    <input type="text" class="input-field" placeholder="Email" name="correo" autocomplete="off" required value="<%= typeof correo !== 'undefined' ? correo : '' %>">
                </div>
                <div class="input-box">
                    <input type="password" class="input-field" placeholder="Password" name="contrasena" autocomplete="off" required>
                </div>
                <div class="forgot">
                    <section>
                        <input type="checkbox" id="check" name="recuerdame">
                        <label for="check">Recordarme</label>
                    </section>
                    <section>
                        <a href="#">¿Olvidaste tu contraseña?</a>
                    </section>
                </div>
                <div class="input-submit">
                    <button type="submit" class="submit-btn" id="submit"></button>
                    <label for="submit">Iniciar Sesión</label>
                </div>
                <div class="sign-up-link">
                    <p>¿No tienes una cuenta? <a href="/users/signup">Crear Cuenta</a></p>
                </div>
            </form>
        </div>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/javascripts/script.js"></script>

</html>
