<%- include('../partials/head') %>
    <title>Detalles del Producto</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .card-img-container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-img-container a {
            display: block; /* Para que el enlace ocupe todo el contenedor */
        }

        .card-img-container img {
            max-width: 150px;
            height: auto;
            margin: 10px;
        }
    </style>

<%- include('../partials/header') %>
<body class="bg-light text-dark">
    <div class="container">
        <header class="text-center my-4">
            <h1>Product Details</h1>
        </header>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-4 card-img-container">
                            <a href="<%= product.img %>" target="_blank">
                                <img src="<%= product.img %>" class="img-fluid rounded-start" alt="<%= product.nombre %>">
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title text-center">
                                    <%= product.nombre %>
                                </h5>
                                <p class="card-text text-center"><strong>Card ID:</strong>
                                    <%= product.api_id %>
                                </p>
                                <p class="card-text text-center"><strong>Set:</strong>
                                    <%= product.set_name %>
                                </p>
                                <p class="card-text text-center"><strong>Foil Type:</strong>
                                    <%= product.foilType %>
                                </p>
                                <p class="card-text text-center"><strong>State:</strong>
                                    <%= product.state ? product.state.state : '' %>
                                </p>
                                <p class="card-text text-center"><strong>Price:</strong> $<%= toThousand(product.precio) %>
                                </p>
                                <p class="card-text text-center"><strong>Description:</strong>
                                    <%= product.descripcion %>
                                </p>
                                <div class="text-center">
                                    <a href="/products/admin" class="btn btn-secondary me-2">Back</a>
                                    <a href="/products/edit/<%= product.id %>" class="btn btn-warning me-2">Edit</a>
                                    <form method="POST" action="/products/delete/<%= product.id %>?_method=DELETE"
                                        style="display:inline">
                                        <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Delete this product?')">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>